# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gambit_stocks
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gambit_stocks
DB_USER=user
DB_PASSWORD=password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External APIs
ALPHA_VANTAGE_KEY=your_key_here
YAHOO_FINANCE_KEY=your_key_here

# Rate Limiting
RATE_LIMIT_ANONYMOUS_PER_MIN=10
RATE_LIMIT_AUTHENTICATED_PER_MIN=60
RATE_LIMIT_PREMIUM_PER_MIN=300

# JWT Authentication
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Cache TTL (seconds)
CACHE_TTL_QUOTE=60
CACHE_TTL_FUNDAMENTALS=86400
CACHE_TTL_HEALTH_SCORE=604800
CACHE_TTL_VALUATION=3600

# WebSocket
WS_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Data Sources
B3_API_URL=https://www.b3.com.br/api/v1
CVM_API_URL=https://dados.cvm.gov.br/api
BCB_API_URL=https://api.bcb.gov.br/dados/serie/bcdata.sgs
FUNDAMENTUS_URL=https://www.fundamentus.com.br
STATUS_INVEST_URL=https://statusinvest.com.br

# Scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY_MS=1000
MAX_CONCURRENT_REQUESTS=5

# Queue
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=10

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
